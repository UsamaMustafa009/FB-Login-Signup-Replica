// Function to show signup form and hide login form
function showSignupForm() {
    document.querySelector('.right-section').classList.remove('active');
    document.querySelector('.signup-container').classList.add('active');
}

// Function to show login form and hide signup form
function showLoginForm() {
    document.querySelector('.signup-container').classList.remove('active');
    document.querySelector('.right-section').classList.add('active');
}

// On page load, show login form by default
document.addEventListener('DOMContentLoaded', () => {
    document.querySelector('.right-section').classList.add('active');
});
